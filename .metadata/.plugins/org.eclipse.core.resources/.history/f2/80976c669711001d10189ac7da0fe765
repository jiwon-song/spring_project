<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="customer.mapper">

<!--  고객정보삭제 6/21 2:36 -->
<delete id="delete">
delete from customer where id = #{id}
</delete>

<!--  고객정보변경저장 6/21 2:13 -->
<update id="update">
update customer set gender=#{gender}, email=#{email}, phone = #{phone}
where id = #{id}
</update>



<!-- 신규고객정보저장 -->
<insert id='insert'>
insert into customer (id, name, gender, email, phone) 
values (seq_customer.nextval, #{name}, #{gender}, #{email}, #{phone})
</insert>

<!-- 고객정보상세조회 -->
<select id="detail" resultType="customer.CustomerVO">
select * from customer where id = #{id}

</select>

<!--  스프링에서는 DAO 에서 쿼리문 작성 안하고 여기서 쿼리문 작성함 -->
<!-- 고객목록조회 -->
<select id="list" resultType="customer.CustomerVO">
select * from customer
order by id
</select>
</mapper>